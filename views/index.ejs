<!DOCTYPE html>
<html lang="en">
  <%-include('layouts/header');-%>

  <body>
    <%-include('layouts/navbar');-%>
    <!-- Masthead -->
    <header class="masthead text-white text-center">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <h1 class="mb-5">Short Links, Big Results!</h1>
          </div>
          <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
            <form action="/UrlShort" method="POST">
              <div class="form-row">
                <div class="col-12 col-md-9 mb-2 mb-md-0">
                  <input
                    type="url"
                    class="form-control form-control-lg"
                    placeholder="Shorten Your Link"
                    id="fullUrl"
                    name="fullUrl"
                  />
                </div>
                <div class="col-12 col-md-3">
                  <button
                    type="submit"
                    class="btn btn-block btn-lg btn-primary"
                  >
                    Shorten
                  </button>
                </div>
              </div>
            </form>
            <p></p>
            <table>
              <thead>
                <tr>
                  <th>Full URL</th>
                  <th>Short URL</th>
                  <th>Clicks</th>
                </tr>
              </thead>
              <tbody>
                <% UrlShorts.forEach(UrlShort => {%>
                <tr>
                  <td>
                    <a href="<%= UrlShort.full %> "><%= UrlShort.full %></a>
                  </td>
                  <td>
                    <a href="<%= UrlShort.short %> "><%= UrlShort.short %></a>
                  </td>
                  <td><%= UrlShort.clicks %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </header>
    <%-include('layouts/footer');-%><%-include('layouts/scripts');-%>
  </body>
</html>
